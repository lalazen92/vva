    android:background="@drawable/bg_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:padding="10dp" >

    <ImageView
        android:id="@+id/iconcontactid"
        android:layout_width="48dp"
        android:layout_height="48dp"
